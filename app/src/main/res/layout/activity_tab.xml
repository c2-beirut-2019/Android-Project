<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activities.TabActivity">

    <include layout="@layout/header"
        android:id="@+id/lHeader"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lHeader"
        android:layout_above="@+id/llBottomMenu"
        >

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/llBottomMenu"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_white_with_shadow_tab"
        android:weightSum="6"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlNews"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivHome"
                android:src="@drawable/ic_news"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlProducts"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivProducts"
                android:src="@drawable/ic_products"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlDoctors"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivDoctors"
                android:src="@drawable/ic_doctors"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlAppointments"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivAppointments"
                android:src="@drawable/ic_appointments"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlPets"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivPets"
                android:src="@drawable/ic_pets"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/rlProfile"
            android:background=""

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:id="@+id/ivProfile"
                android:src="@drawable/ic_profile"
                />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>